@model Event.Models.ViewModels.LoginViewModel
@{
}

<div class="conatiner mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mt-3 mb-3 h3">
                Login
            </h1>
            <div class="alert-danger">
                @if (ViewData["LoginFlag"] != null)
                {
                    @ViewData["LoginFlag"];
                }
            </div>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" id="username" class="form-control" asp-for="Username"/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Passowrd</label>
                    <input type="password" id="password" class="form-control" asp-for="Passowrd" />
                    <span asp-validation-for="Passowrd" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>