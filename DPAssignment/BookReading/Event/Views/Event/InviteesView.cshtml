
@model CommonModel.Model.AddEvent
@{ 

}

<div class="container">
    <div class="container">
        <div class="col-md-12">
            <div class="card mb-4 shadow-sm">

                <div class="card-body">
                    <div class="card-title">
                        <h4>@Model.title</h4>
                    </div>

                    <div>
                        <p class="text-success d-inline">Location :</p>@Model.location
                    </div>
                    <div>
                        <p class="text-success d-inline">Date :</p> @Model.date.ToShortDateString()
                    </div>
                    <div>
                        <p class="text-success d-inline">Start Time :</p> @Model.startTime
                    </div>

                </div>

                <div class="btn-group mt-2">
                    <a asp-action="EventView" asp-controller="Event" asp-area="" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">Event Details</a>
                </div>
            </div>
        </div>
    </div>
</div>