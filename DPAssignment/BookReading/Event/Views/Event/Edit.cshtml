@model Event.Models.ViewModels.EditEventViewModel
@{ 

}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h3>Edit Event</h3>
    </div>
</div>

<div class="container py-5">

    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="id" asp-for="Id" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" id="title" asp-for="title" required/>
            </div>
            <div class="mb-3">
                <label class="form-label">Date</label>
                <input type="date" class="form-control" id="date" asp-for="date" required/>
            </div>
            <div class="mb-3">
                <label class="form-label">Location</label>
                <input type="text" class="form-control" id="location" asp-for="location" required/>
            </div>
            <div class="mb-3">
                <label class="form-label">Start Time</label>
                <input type="time" class="form-control" id="startTime" asp-for="startTime" required/>
            </div>


            <div class="mb-3">
                <label class="form-label">Duration In Hours</label>
                <input type="number" class="form-control" id="durationInHours" asp-for="durationInHours" required max="4" min="1"/>
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea type="text" class="form-control" id="description" asp-for="description" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Other Details</label>
                <input type="text" class="form-control" id="otherDetails" asp-for="otherDetails" />
            </div>
            <div class="mb-3">
                <label class="form-label">Invite By Email</label>
                <input type="text" class="form-control" id="InviteByEmail" asp-for="InviteByEmail" />
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="Visible" asp-for="Visible">
                <label class="form-check-label">
                    Public
                </label>
            </div>
            <div class="mb-3">
                <label class="form-label">Organiser</label>
                <input type="text" class="form-control" id="Organiser" asp-for="Organiser" value="@Model.Organiser" readonly />
            </div>

            <div class="mb-3 d-flex">
                <button type="submit" class="btn btn-dark mr-3">
                    Update
                </button>
                <button type="submit" class="btn btn-danger" asp-area="" asp-action="Delete" asp-controller="Event">
                    Delete
                </button>
            </div>
        </form>
    }

    else
    {
        <p>No Event Found</p>
    }

</div>